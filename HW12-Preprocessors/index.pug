mixin section()
    h2 Light, Fast & Powerful
    .w-100
    p.col-md-6 #{lorem_long}

mixin drawBlock()
    .col-md-3
        img.draw(src="../img/section2_ico.svg")
        .w-100
        h3 Title Goes Here
        .w-100
        p= lorem_short

mixin purchase_now_btn()
    button.btn.btn-primary.purchase_now_btn Purchase Now

mixin purchase_ui_btn()
    button.btn.btn-primary.purchase_ui_btn Purchase UI Kit

mixin buy_now_btn()
    button.btn.btn-primary.buy_now_btn.col-md Buy Now

mixin learn_more_btn()
    button.btn.btn-secondary.learn_more_btn.ml-3 Learn More

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
        title HW12 Preprocessors
    body
        .wrapper
            .container
                header.row.navbar.navbar-expand-sm
                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.col-md
                            li.nav-item.mr-5
                                a.nav-link(href="#") Home
                                    span.sr-only (current)
                            li.nav-item.mr-5
                                a.nav-link(href="#") About
                                    span.sr-only (current)
                            li.nav-item
                                a.nav-link(href="#") Contact
                                    span.sr-only (current)
                    a.navbar-brand.logo.col-md Landie
                    +buy_now_btn()
                section.section1.row
                    h1.col-md-6 Introduce Your Product Quickly & Effectively
                    .w-100
                    p.col-md-6 #{lorem_long}
                    .w-100
                    .buttons.col-md-5
                        +purchase_ui_btn()
                        +learn_more_btn()
                section.section2.row
                    +section()
                    .row
                        +drawBlock()
                        +drawBlock()
                section.section3.row
                    +section()
                section.section4.row
                    +section()
                section.section5.row
                    +section()
                    +purchase_now_btn()
                section.section6.row.justify-content-center
                    .col-md-7
                        h2 A price to Suit Everyone
                        p #{lorem_short}
                        p.price $40
                        p.price_name UI Design Kit
                        p.tagline See, One price. Simple.
                        +purchase_now_btn()
                footer
                    .row.justify-content-between
                        p.copyright.col-md-2 Â©2020 Yourcompany
                        p.logo.col-md-2 Landie
                        +purchase_now_btn()
                    hr
                    .row.navbar.justify-content-between
                        ul.navbar-nav.col-md-3
                            li.nav-item
                                a.nav-link(href="#") Home
                            li.nav-item
                                a.nav-link(href="#") About
                            li.nav-item
                                a.nav-link(href="#") Contact
                        ul.navbar-nav.col-md-3
                            li.nav-item
                                a.nav-link(href="#")
                                    img(src="./img/FB.svg")
                            li.nav-item
                                a.nav-link(href="#")
                                    img(src="./img/Li.svg")
                            li.nav-item
                                a.nav-link(href="#")
                                    img(src="./img/twitter.svg")
                            li.nav-item
                                a.nav-link(href="#")
                                    img(src="./img/YT.svg")
                            li.nav-item
                                a.nav-link(href="#")
                                    img(src="./img/insta.svg")
